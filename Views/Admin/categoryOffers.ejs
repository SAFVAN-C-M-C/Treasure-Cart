<!DOCTYPE html>
<html lang="en">
<head>
<%-include('../layout/adminHeaderlinks')-%>
<link rel="stylesheet" href="/static/css/offers.css"/>
</head>
<body>
<%-include('../partials/admin-sample-nav')-%>
<%-include('../modals/addOffer.ejs')-%>
<%-include('../modals/deleteOffer')-%>
<%-include('../modals/editOffer')-%>


<section class="main">
  <div class="container">
    <div class="row d-flex header">
      <div class="col-6"><h2>Category Offers</h2></div>
      <div class="col-6 d-flex justify-content-end"><a data-bs-toggle="modal" data-bs-target="#addOfferModal" class="btn-custom">Add Offer</a></div>
    </div>

    <div class="row mt-3">
      <div class="products-main col-12">
        <div class="table-responsive col-12">
            
            <%if(Array.isArray(offers)){%>
            <table class="table   table-shadow mt-3">
                <thead>
                    <tr>
                        <th class="text-center">Category</th>
                        <th class="text-center">Offer</th>
                        <th class="text-center">ExpireDate</th>
                        <th class="text-center">Action</th>
                    </tr>
                </thead>
                <%offers.forEach((offers)=>{%>
                <tbody>
                    <tr>
                        <td> <div class="table-data"><%=offers.categoryName%></div> </td>
                        <td> <div class="table-data"><%=offers.percentage%>%</div> </td>
                        <td> <div class="table-data"><%=offers.expireDate.toDateString()%></div> </td>
                        <td>
                            <div class="table-data">
                                <a  data-bs-toggle="modal" data-bs-target="#editOfferModal<%=offers._id%>">
                                    <lord-icon src="https://cdn.lordicon.com/qtqvorle.json" trigger="hover" colors="outline:#121331,primary:#646e78,secondary:#ebe6ef,tertiary:#4cb4fd" style="width:25px;height:25px"></lord-icon>
                                </a>
                                <a  data-bs-toggle="modal" data-bs-target="#deleteconfirmation<%=offers._id%>">
                                    <lord-icon src="https://cdn.lordicon.com/exkbusmy.json" trigger="morph" colors="outline:#121331,primary:#646e78,secondary:#4bb3fd,tertiary:#ebe6ef" state="morph-trash-in" style="width:25px;height:25px"></lord-icon>
                                </a>
                            </div> 
                        </td>

                    </tr>
                </tbody>
                <%})%>
            </table>
            <%}else{%>
              <h1>nothing here to see</h1>
            <%}%>
        </div>
      </div>
    </div>

  </div>
</section>
<hr>
<br>
<div class="col-lg-12 d-flex justify-content-end" >
  <nav aria-label="page navigation example ">
      <ul class="pagination" style="margin-right: 40px;">
        <%for(let i=1;i<=count;i++){%>
          <li class="page-item"><a class="page-link" href="/admin/brand?<%=i%>"><%=i%></a></li>
        <%}%>

      </ul>
  </nav>
</div>

<script src="/static/js/offers.js"></script>
<%-include('../layout/footer')-%>