<%offers.forEach((offers)=>{%>
<div class="modal fade" id="deleteconfirmation<%=offers._id%>" tabindex="-1" role="dialog" aria-labelledby="deleteconfirmationLabel<%=offers._id%>" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Delete</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          Do you want to delete the offer for <%=offers.categoryName%>?
        </div>
        <div class="modal-footer">
          <button style="background-color: black;" type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <a onclick="deleteOffer('<%=offers._id%>')" class="btn btn-danger">Delete</a>
        </div>
      </div>
    </div>
</div>
<%})%>